<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/gxkj_logo"
    tools:context="com.example.gxkj.cardnumbinding.activity.MainActivity">

    <TextView
        android:id="@+id/m_tvDeviceNode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/displayCard"
        android:layout_centerHorizontal="true"
        android:text="未连接"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/displayCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:text="卡号"
        android:textSize="25sp" />

    <!--android:overlapAnchor="false"-->
    <Spinner
        android:layout_margin="20dp"
        android:id="@+id/card_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:spinnerMode="dropdown"
        android:background="@null">

    </Spinner>

    <Spinner
        android:layout_marginLeft="20dp"
        android:visibility="gone"
        android:layout_margin="20dp"
        android:id="@+id/mtm_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:spinnerMode="dropdown"
        android:background="@null"
        android:layout_toRightOf="@+id/card_type">

    </Spinner>



</RelativeLayout>
