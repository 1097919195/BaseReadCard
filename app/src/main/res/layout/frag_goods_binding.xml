<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="false"
    tools:context="com.example.gxkj.cardnumbinding.activity.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="0dp"
            android:layout_weight="0.8"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="9"
                android:orientation="vertical">
                <TextView
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_preference_first_normal"
                    android:textSize="@dimen/item_text_size_30"
                    android:textColor="@color/colorPrimary"
                    android:padding="5dp"
                    android:text="物品详情"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/ic_preference_last_normal"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:textSize="@dimen/item_text_size_25"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="物品名称："/>
                        <TextView
                            android:textSize="@dimen/item_text_size_25"
                            android:id="@+id/name"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:textSize="@dimen/item_text_size_25"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="物品编号："/>
                        <TextView
                            android:textSize="@dimen/item_text_size_25"
                            android:id="@+id/num"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:textSize="@dimen/item_text_size_25"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="物品备注："/>
                        <TextView
                            android:textSize="@dimen/item_text_size_25"
                            android:id="@+id/remark"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <include layout="@layout/layout_frag_right_staffandsample" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>